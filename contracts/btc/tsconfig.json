{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "incremental": true,
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["./src/*"]
    },
    "strictNullChecks": true,
    "tsBuildInfoFile": "./.tsbuildinfo"
  },
  "exclude": ["node_modules", "dist"],
  "extends": "@repo/config/tsconfig/library/node",
  "include": ["**/*.ts", "**/*.tsx"]
}
